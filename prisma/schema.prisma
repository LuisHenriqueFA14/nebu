generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
	id           String  @id  @default(uuid()) @map("_id")
	email        String  @unique
	username     String  @unique
	name         String
	password     String
	projects     String[]
	accounts     String[]
	picture      String?
	created_at   DateTime  @default(now())

	@@map("users")
}

model Project {
	id           String  @id  @default(uuid()) @map("_id")
	owner        String
	title        String
	description  String?
	path         String
	platform     String
	link         String
	tags         String[]
	created_at   DateTime  @default(now())

	@@map("projects")
}
